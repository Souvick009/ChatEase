<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatEase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--         <item name="colorPrimary">@color/dark_blue</item>-->
        <item name="android:statusBarColor">@color/item_background</item>
        <item name="cardViewStyle">@style/StyleCard</item>
        <item name="icon_background">@color/icon_color</item>
        <item name="itemBackground">@color/black</item>
        <item name="textColors">@color/textColors</item>
        <item name="colorCard">@color/signUpCardView</item>
        <item name="textAppearanceCaption">@style/TextInputErrorMessage</item>

    </style>

    <style name="StyleCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>

    </style>

    <style name="TextInputErrorMessage" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/_25ssp</item>
    </style>

    <style name="HelperTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Theme.ChatEase" parent="Base.Theme.ChatEase" />
</resources>