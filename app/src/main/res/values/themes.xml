<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatEase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--         <item name="colorPrimary">@color/dark_blue</item>-->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="icon_background">@color/icon_color</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="itemBackground">@color/black</item>
        <item name="textColors">@color/textColors</item>
        <item name="colorCard">@color/signUpCardView</item>
        <item name="textAppearanceCaption">@style/TextInputErrorMessage</item>
        <item name="materialCardViewStyle">@style/CustomCardViewDesign</item>
        <item name="bottomNavigationStyle">@style/bottomNavigationView</item>
        <item name="android:navigationBarColor">#FBFBFB</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="ThemeChatActivity" parent="Base.Theme.ChatEase">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="bottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">#FBFBFB</item>
    </style>
    <style name="TextInputErrorMessage" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/_25ssp</item>
    </style>
    <!--Setting Default Values for Material CardView-->
    <style name="CustomCardViewDesign" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <style name="HelperTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Theme.ChatEase" parent="Base.Theme.ChatEase" />
</resources>
